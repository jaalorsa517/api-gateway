{
  "hosting": {
    "target":"api-gateway",
    "rewrites": [ {
      "source": "**",
      "function": "apigw"
    } ]
  },  
  "functions": [
    {
      "source": ".",
      "codebase": "api-gateway",
      "runtime": "nodejs18",
      "ignore": [
        "**/node_modules/**",
        ".git",
        ".husky",
        "firebase-debug.*.log",
        ".github",
        ".github/**",
        ".firebase",
        "**/src/**",
        ".env.*",
        "package-lock.json",
        "tsconfig.json",
        "jest.config.ts",
        "coverage",
        "test"
      ],
      "predeploy": [
        "npm run build"
      ]
    }
  ]
}
